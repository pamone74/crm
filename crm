    <script>
        // Tab Management
        function showTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected tab
            document.getElementById(tabName).classList.add('active');
            
            // Update sidebar active state
            document.querySelectorAll('aside a').forEach(link => {
                link.classList.remove('sidebar-active');
            });
            event.target.classList.add('sidebar-active');
            
            // Close mobile sidebar after selection
            if (window.innerWidth < 768) {
                closeMobileSidebar();
            }
        }

        // Mobile Sidebar Management
        function toggleMobileSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobileOverlay');
            
            sidebar.classList.toggle('open');
            overlay.classList.toggle('active');
        }

        function closeMobileSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobileOverlay');
            
            sidebar.classList.remove('open');
            overlay.classList.remove('active');
        }

        // Notifications Toggle
        function toggleNotifications() {
            const dropdown = document.getElementById('notificationsDropdown');
            dropdown.classList.toggle('hidden');
        }

        // Modal Management
        function openUploadModal() {
            document.getElementById('uploadModal').classList.remove('hidden');
            document.getElementById('uploadModal').classList.add('flex');
        }

        function closeUploadModal() {
            document.getElementById('uploadModal').classList.add('hidden');
            document.getElementById('uploadModal').classList.remove('flex');
        }

        // ERP Integration Simulation
        function simulateERPSync() {
            const lastSyncElement = document.getElementById('lastSync');
            const now = new Date();
            const timeString = now.toLocaleTimeString('en-US', { 
                hour12: false, 
                hour: '2-digit', 
                minute: '2-digit' 
            });
            lastSyncElement.textContent = timeString;
        }

        // Emergency Alert Simulation
        function simulateEmergencyAlert() {
            const emergencyBtn = document.getElementById('emergencyBtn');
            const AMCStatus = document.getElementById('AMCStatus');
            
            // Randomly trigger emergency alerts
            if (Math.random() > 0.8) {
                emergencyBtn.classList.remove('hidden');
                AMCStatus.classList.remove('bg-green-500');
                AMCStatus.classList.add('bg-red-500');
                
                // Auto-hide after 10 seconds
                setTimeout(() => {
                    emergencyBtn.classList.add('hidden');
                    AMCStatus.classList.remove('bg-red-500');
                    AMCStatus.classList.add('bg-green-500');
                }, 10000);
            }
        }

        // AMC Compliance Monitoring
        function monitorAMCCompliance() {
            console.log('AMC System: Monitoring compliance status...');
            console.log('AMC System: All certifications verified');
            console.log('AMC System: Response time targets met');
            console.log('AMC System: Safety protocols active');
        }

        // Real-time Updates Simulation
        function simulateRealTimeUpdates() {
            const updates = [
                'New work order assigned: WO-2024-020',
                'Purchase order approved: PO-2024-021',
                'Emergency alert resolved: EMG-2024-003',
                'Document uploaded: Warranty certificate',
                'AMC compliance check completed',
                'Customer rating updated: 4.9/5'
            ];

            const randomUpdate = updates[Math.floor(Math.random() * updates.length)];
            console.log(`ERP Integration: ${randomUpdate}`);
            
            // Update notification count
            const notificationCount = document.getElementById('notificationCount');
            const currentCount = parseInt(notificationCount.textContent);
            notificationCount.textContent = Math.min(currentCount + 1, 9);
        }

        // File Upload Simulation
        function simulateFileUpload() {
            const progressBar = document.querySelector('.file-upload-progress');
            const progressText = document.getElementById('progressText');
            const uploadProgress = document.getElementById('uploadProgress');
            
            uploadProgress.classList.remove('hidden');
            
            let progress = 0;
            const interval = setInterval(() => {
                progress += Math.random() * 20;
                if (progress >= 100) {
                    progress = 100;
                    clearInterval(interval);
                    setTimeout(() => {
                        uploadProgress.classList.add('hidden');
                        closeUploadModal();
                        alert('Documents uploaded successfully!');
                    }, 1000);
                }
                
                progressBar.style.width = progress + '%';
                progressText.textContent = Math.round(progress) + '%';
            }, 500);
        }

        // Initialize Application
        document.addEventListener('DOMContentLoaded', function() {
            // Start ERP sync simulation
            simulateERPSync();
            setInterval(simulateERPSync, 30000); // Every 30 seconds
            
            // Start emergency alert simulation
            setInterval(simulateEmergencyAlert, 60000); // Every minute
            
            // Start AMC compliance monitoring
            setInterval(monitorAMCCompliance, 120000); // Every 2 minutes
            
            // Start real-time updates
            setInterval(simulateRealTimeUpdates, 45000); // Every 45 seconds
            
            // Close notifications when clicking outside
            document.addEventListener('click', function(event) {
                const dropdown = document.getElementById('notificationsDropdown');
                const bellIcon = event.target.closest('.fa-bell');
                
                if (!dropdown.contains(event.target) && !bellIcon) {
                    dropdown.classList.add('hidden');
                }
            });

            // Drag and drop functionality
            const dropZone = document.querySelector('.drag-drop-zone');
            const fileInput = dropZone.querySelector('input[type="file"]');
            
            dropZone.addEventListener('click', () => fileInput.click());
            
            dropZone.addEventListener('dragover', (e) => {
                e.preventDefault();
                dropZone.classList.add('dragover');
            });
            
            dropZone.addEventListener('dragleave', () => {
                dropZone.classList.remove('dragover');
            });
            
            dropZone.addEventListener('drop', (e) => {
                e.preventDefault();
                dropZone.classList.remove('dragover');
                simulateFileUpload();
            });

            // Add click handlers for interactive buttons
            document.querySelectorAll('button').forEach(button => {
                if (button.textContent.includes('Accept Emergency')) {
                    button.addEventListener('click', function() {
                        this.textContent = 'Emergency Accepted';
                        this.classList.remove('bg-white', 'text-red-600');
                        this.classList.add('bg-green-600', 'text-white');
                        console.log('AMC System: Emergency response team dispatched');
                    });
                }
                
                if (button.textContent.includes('Accept PO')) {
                    button.addEventListener('click', function() {
                        this.textContent = 'PO Accepted';
                        this.classList.remove('bg-green-600');
                        this.classList.add('bg-blue-600');
                        console.log('ERP Integration: Purchase order accepted and synced');
                    });
                }
                
                if (button.textContent.includes('Schedule Delivery')) {
                    button.addEventListener('click', function() {
                        console.log('ERP Integration: Delivery scheduled and customer notified');
                        alert('Delivery scheduled successfully! Customer has been notified.');
                    });
                }
                
                if (button.textContent.includes('Submit Invoice')) {
                    button.addEventListener('click', function() {
                        console.log('ERP Integration: Invoice submitted for processing');
                        alert('Invoice submitted successfully! Processing time: 2-3 business days.');
                    });
                }
            });

            console.log('Supplier/Contractor Portal initialized');
            console.log('ERP Integration: Connected to Ten Eleven Patisserie system');
            console.log('AMC Compliance: All systems operational');
        });
    </script>
